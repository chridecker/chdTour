@page "/grade"
@using chdTour.App.Components.Base
@using chdTour.App.Components.Pages.Scala
@using chdTour.DataAccess.Contracts.Domain

@inherits BaseSearchForm<IGradeRepository, Grade>


<EntityTable EntityName="Grad" T="Grade" 
    TRepo="IGradeRepository" Item="this._item" Items="this._items" OnEdit="async x => await this.SetEntity(x)">
    <ChildContent>
        <GradeEditForm Token="this._cts.Token" OnBack="this.OnBack" Value="this._item" />
    </ChildContent>
    <HeaderContent>
        <TableHead>Title</TableHead>
        <TableHead>Skala</TableHead>
    </HeaderContent>
    <RowTemplate Context="entity">
        <TableData>@entity.Title</TableData>
        <TableData>
            @entity.GradeScala.Title
        </TableData>
    </RowTemplate>
</EntityTable>