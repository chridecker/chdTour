@inherits BaseEditForm<ITourImageRepository,TourImage,Guid>

<div class="edit-tour">
    <EditFormLayout TRepo="ITourImageRepository" T="TourImage" PK="Guid" @ref="this._layout" Value="this.Value">
        <EditFormText TRepo="ITourImageRepository" T="TourImage" PK="Guid" Title="Titel" Property="x => x.Title" Value="this.Value" />
        <EditFormImage TRepo="ITourImageRepository" T="TourImage" PK="Guid" Title="Titel" Property="x => x.Data" Value="this.Value" @bind-Type="@this.Value.Type" />
    </EditFormLayout>
</div>

@code {
    protected async override Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
    }

    private void Changed(Tour tour)
    {
        this.Value.TourId = tour.Id;
    }
}