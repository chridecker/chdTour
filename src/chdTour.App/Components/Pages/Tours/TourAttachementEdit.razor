@using chdTour.App.Components.Base
@using chdTour.App.Components.Inputs
@using chdTour.DataAccess.Contracts.Domain
@inherits BaseEditForm<ITourAttachementRepository,TourAttachement>

<EditFormLayout TRepo="ITourAttachementRepository" T="TourAttachement" @ref="this._layout" Value="this.Value">
    <EditFormText TRepo="ITourAttachementRepository" T="TourAttachement" Title="Titel" Property="x => x.Title" Value="this.Value" />
    <EditFormImage TRepo="ITourAttachementRepository" T="TourAttachement" Title="Titel" Property="x => x.Data" Value="this.Value"  @bind-Type="@this.Value.Type" />
</EditFormLayout>


@code {
    protected async override Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
    }

    private void Changed(Tour tour)
    {
        this.Value.TourId = tour.Id;
    }
}