<EditFormLayout TRepo="ITourAttachementRepository" T="TourAttachement" PK="Guid" @ref="this._layout" Value="this.Value">
    <EditFormText TRepo="ITourAttachementRepository" T="TourAttachement" PK="Guid" Title="Titel" Property="x => x.Title" Value="this.Value" />
    <EditFormImage TRepo="ITourAttachementRepository" T="TourAttachement" PK="Guid" Title="Titel" Property="x => x.Data" Value="this.Value"  @bind-Type="@this.Value.Type" />
