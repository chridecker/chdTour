@page "/scala"
@using chdTour.App.Components.Base
@using chdTour.App.Components.Pages.Scala
@using chdTour.DataAccess.Contracts.Domain

@inherits BaseSearchForm<IGradeScalaRepository, GradeScala>


<EntityTable EntityName="Skala" T="GradeScala"
             TRepo="IGradeScalaRepository" Item="this._item" Items="this._items" OnEdit="async x => await this.SetEntity(x)">
    <ChildContent>
        <ScalaEdit Token="this._cts.Token" OnBack="async ()=>await this.OnBack()" Value="this._item" />
    </ChildContent>
    <HeaderContent>
        <TableHead>Title</TableHead>
        <TableHead>Grade</TableHead>
    </HeaderContent>
    <RowTemplate Context="entity">
        <TableData>@entity.Title</TableData>
        <TableData>
            @(string.Join(",", entity.Grades.Select(s => s.Title)))
        </TableData>
    </RowTemplate>
</EntityTable>