@using Microsoft.EntityFrameworkCore
@using chdTour.App.Components.Base
@using chdTour.App.Components.Inputs
@using chdTour.DataAccess.Contracts.Domain
@inherits BaseEditForm<IPersonRepository,Person>

<EditFormLayout TRepo="IPersonRepository" T="Person" @ref="this._layout" Value="this.Value" OnBack="this.OnBack">
